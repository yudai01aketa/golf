<% @course = Course.find(favorite.course_id) %>
<% user = @course.user %>
<li id="favorite-<%= favorite.id %>">
  <div class="row favorite-course">
    <div class="col-md-2">
      <%= link_to((image_tag @course.picture.url), course_path(@course), class: 'course-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to @course.name, course_path(@course) %></p>
      <p><%= @course.description %></p>
      <p class="cook-user">cooked by <%= link_to user.name, user_path(user) %></p>
    </div>
  </div>
</li>
