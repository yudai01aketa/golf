<% user = User.find(notification.from_user_id) %>
<% course = Course.find(notification.course_id) %>
<li id="notification-<%= notification.id %>">
  <div>
    <% if notification.variety == 1 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたのコースが<%= link_to user.name, user_path(user) %>さんにお気に入り登録されました。</p>
    <% elsif notification.variety == 2 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたのコースに<%= link_to user.name, user_path(user) %>さんがコメントしました。
      「<%= notification.content %>」</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to((image_tag course.picture.thumb200.url), course_path(course), class: 'course-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to course.name, course_path(course) %></p>
      <p><%= course.description %></p>
    </div>
  </div>
</li>
