<div class="container">
  <% if @lists.present? %>
    <ol class="lists background-style">
      <div class="row">
        <div class="col-md-12">
          <h3>　ブックマーク一覧 (<%= @lists.count %>)</h3>
        </div>
      </div>
      <%= render @lists %>
    </ol>
  <% else %>
    <h3 class="nothing-list">ブックマークはありません</h3>
  <% end %>
</div>
